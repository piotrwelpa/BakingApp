<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cake_item_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cake_image_item_cv"
            android:layout_width="match_parent"
            android:contentDescription="@string/cake_image"
            android:layout_height="@dimen/cake_image_height" />

        <TextView
            android:id="@+id/cake_name_item_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_padding"
            android:textSize="@dimen/cake_name_cv_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_margin="@dimen/line_margin"
        android:background="@color/colorPrimaryDark" />

</android.support.v7.widget.CardView>