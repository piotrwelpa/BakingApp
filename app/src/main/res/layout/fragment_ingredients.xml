<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.IngredientsFragment">

    <TextView
        android:id="@+id/ingredient_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_padding"
        android:layout_marginStart="@dimen/text_padding"
        android:layout_marginTop="@dimen/text_padding"
        android:padding="@dimen/title_padding"
        android:text="@string/ingredients"
        android:textSize="@dimen/cake_name_cv_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/cake_ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/text_padding"
        android:layout_marginEnd="@dimen/text_padding"
        android:layout_marginStart="@dimen/text_padding"
        android:layout_marginTop="@dimen/text_padding"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/show_steps_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingredient_title_tv"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/show_steps_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_padding"
        android:layout_marginEnd="@dimen/text_padding"
        android:layout_marginStart="@dimen/text_padding"
        android:text="@string/show_steps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>